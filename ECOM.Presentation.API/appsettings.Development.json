{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MainDbContext": "${ConnectionStrings__MainDbContext}",
    "MainLoggingDbContext": "${ConnectionStrings__MainLoggingDbContext}"
  },
  "AppSettings": {
    "Authentication": {
      "MaxVerifyFailedCount": 5,
      "MaxAccessFailedCount": 5,
      "NumberOfDaysLocked": 7,
      "Jwt": {
        "SecretKey": "${AppSettings__Authentication__Jwt__SecretKey}",
        "ValidIssuer": "ECOM",
        "ValidAudience": "ECOMAudience",
        "AccessTokenValidityInMinutes": 60,
        "RefreshTokenValidityInDays": 7
      },
      "Cors": {
        "AllowedOrigins": [
          "https://yourfrontenddomain.com",
          "https://anotherdomain.com"
        ]
      }
    },
    "DbContext": {
      "Retry": {
        "MaxAttemptCount": 3,
        "IntervalInSeconds": 5
      },
      "Bulk": {
        "BatchSize": 1000,
        "CmdTimeOutInMiliseconds": 30000
      }
    },
    "Smtp": {
      "User": "smtp-user@example.com",
      "Password": "your-smtp-password",
      "Host": "smtp.mailserver.com",
      "Port": 587
    },
    "Storage": {
      "Endpoint": "localhost",
      "Port": 9000,
      "AccessKey": "${AppSettings__Storage__AccessKey}",
      "SecretKey": "${AppSettings__Storage__SecretKey}",
      "UseSSL": false
    },
    "Logging": {
      "MinimumLevel": "Information"
    }
  }
}
